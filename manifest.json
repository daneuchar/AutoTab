{
  "manifest_version": 3,
  "name": "InitPage - Scheduled URL Opener",
  "version": "1.0.0",
  "description": "Automatically open URLs at scheduled times based on day of week. Configure recurring or one-time schedules with a simple interface.",
  "permissions": [
    "storage",
    "alarms",
    "tabs",
    "tabGroups",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
